{
  "compilerOptions": {
    /* Basic Options */
    "target": "es5",
    "module": "CommonJS",

    /* Strict Type-Checking Options */
    "strict": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,

    /* Advanced Options */
    "noEmit": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "preserveSymlinks": true
  },
  "exclude": ["**/*.spec.ts", "**/*.test.ts", "**/*.integration.ts"]
}
